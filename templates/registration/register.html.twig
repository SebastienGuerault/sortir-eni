{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {%  for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}


    <div class="form_alignement">

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.telephone) }}
        <br>
        {# ajout attribut label 'label_attr' + attribut class appelé 'all_labels' à notre élément du formulaire : #}
        {{ form_row(registrationForm.campus,{'label_attr': {'class': 'all_labels'}}) }}
    </div>


    <br>

{# {{ form_label(registrationForm, 'email', {'label_attr': {'class': 'all_labels'}}) }} #}





        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
